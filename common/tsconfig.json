{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es2018",
        "outDir": "./dist",
        "declaration": true,
        "rootDir": "src",
        "baseUrl": "src",
        "sourceRoot": "src",
        "lib": ["esnext", "es2019"],
        "strict": true,
        "composite": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "!src/"]
}
