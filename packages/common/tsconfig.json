{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "outDir": "./dist",
        "declaration": true,
        "rootDir": "src",
        "baseUrl": "src",
        "sourceRoot": "src",
        "lib": ["ES2019"],
        "strict": true,
        "composite": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedLocals": true
    },
    "include": ["src/"],
    "exclude": ["node_modules", "!src/"],
    "references": [
        {
            "path": "./tsconfig.spec.json"
        }
    ]
}
