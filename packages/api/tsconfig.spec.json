{
    "extends": "./tsconfig.json",
    "include": ["**/*.spec.ts", "**/*.test.ts", "src/**/*", "src/*"],
    "exclude": ["src/services/*"],
    "compilerOptions": {
        "types": ["vitest/globals", "node"],
        "baseUrl": ".",
        "paths": {
            "@mewi/common": ["../common/src/index"],
            "@mewi/common/*": ["../common/src/*"],
            "@/*": ["./src/*"]
        },
        "composite": true
    }
}
