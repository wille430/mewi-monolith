{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": false,
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "isolatedModules": true,
        "allowJs": true,
        "lib": ["es2019", "dom"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "src/services/**/*", "node_modules"],
    "include": ["src/**/*"],
    "references": [
        {
            "path": "./tsconfig.spec.json"
        }
    ]
}
