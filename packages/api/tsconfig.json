{
    "extends": "../../tsconfig.base.json",
    "files": [],
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.spec.ts", "./src/**/*.test.ts", "./src/services/**/*"],
    "compilerOptions": {
        "module": "commonjs",
        "types": ["node", "express"],
        "baseUrl": "src",
        "rootDir": ".",
        "outDir": "./dist",
        "lib": ["es2019", "dom"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "@mewi/types": ["../types/src/index.ts"],
            "@mewi/util": ["../util/src/index.ts"],
            "@mewi/ui": ["../ui/src/index.ts"]
        }
    }
}
