{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "types": ["node", "@types/jest"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*",
        "**/test/**/*",
        "**/__mocks__/**/*",
        "./src/**/*.spec.ts",
        "./src/**/*.spec.tsx",
        "./src/**/*.test.ts",
        "./src/**/*.test.tsx",
        "./cypress/**/*.{ts,tsx}"
    ],
    "exclude": ["node_modules"]
}
