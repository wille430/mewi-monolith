{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "incremental": true,
        "preserveSymlinks": true,
        "outDir": "./build",
        "noImplicitAny": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "typeRoots": ["src/types/**/*"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "strict": true,
        "sourceMap": true
    },
    "include": ["src/**/*", "next-end.d.ts", "./tailwind.config.js"],
    "references": [
        {
            "path": "./tsconfig.spec.json"
        }
    ],
    "exclude": [
        "node_modules",
        "**/__mocks__/**/*",
        "./src/**/*.spec.ts",
        "./src/**/*.spec.tsx",
        "./src/**/*.test.ts",
        "./src/**/*.test.tsx",
        "./src/**/*.stories.ts",
        "./src/**/*.stories.tsx"
    ]
}
