{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": false,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }],
    "exclude": ["node_modules"]
}
