{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "baseUrl": "src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "incremental": true,
        "preserveSymlinks": true,
        "outDir": "./build",
        "strict": true,
        "noImplicitAny": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
