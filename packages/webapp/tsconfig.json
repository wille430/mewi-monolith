{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "incremental": true,
        "preserveSymlinks": true,
        "outDir": "./build",
        "noImplicitAny": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "typeRoots": ["src/types/**/*"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "strict": true
    },
    "include": ["src/**/*", "next-end.d.ts", "./prisma/*.ts", "./tailwind.config.js"],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.stories.ts",
        "src/**/*.stories.tsx",
    ]
}
