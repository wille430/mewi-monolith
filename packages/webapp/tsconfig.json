{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "incremental": true,
        "preserveSymlinks": true,
        "outDir": "./dist",
        "strict": true
    },
    "include": ["src/**/*"]
}
