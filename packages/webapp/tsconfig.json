{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "incremental": true,
        "preserveSymlinks": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "lib": ["ES2019"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "references": [{ "path": "./tsconfig.spec.json" }]
}
