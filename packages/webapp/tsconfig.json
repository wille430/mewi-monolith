{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "incremental": true,
        "preserveSymlinks": true,
        "outDir": "./build",
        "noImplicitAny": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "typeRoots": ["src/types/**/*"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "strict": true,
        "sourceMap": true
    },
    "include": ["src/**/*", "next-end.d.ts", "./tailwind.config.js"],
    "references": [
        {
            "path": "./tsconfig.spec.json"
        }
    ],
    "exclude": [
        "node_modules",
        "**/__mocks__/**/*",
        "**/test/**/*",
        "./src/**/*.spec.ts",
        "./src/**/*.spec.tsx",
        "./src/**/*.test.ts",
        "./src/**/*.test.tsx",
        "./src/**/*.stories.ts",
        "./src/**/*.stories.tsx",
        "./cypress/**/*.{ts,tsx}"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
            // compilerOptions specified here will override those declared below,
            // but *only* in ts-node.  Useful if you want ts-node and tsc to use
            // different options with a single tsconfig.json.
            "module": "CommonJS"
        }
    }
}
