{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "incremental": true,
        "preserveSymlinks": true,
        "outDir": "./build",
        "strict": true,
        "noImplicitAny": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "typeRoots": ["src/types/**/*"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "next-end.d.ts", "./prisma/*.ts"],
    "exclude": ["node_modules"]
}
