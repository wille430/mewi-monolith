{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "skipLibCheck": false,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "incremental": true,
        "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.spec.json" }]
}
