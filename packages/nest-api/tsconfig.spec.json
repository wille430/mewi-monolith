{
    "extends": "./tsconfig.json",
    "exclude": ["node_modules"],
    "include": [
        "src/**/*",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx"
    ],
    "compilerOptions": {
        "types": ["vitest/globals"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "composite": true
    }
}
