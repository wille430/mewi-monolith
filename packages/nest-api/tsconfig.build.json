{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmit": false,
        "incremental": false,
        "removeComments": true,
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "src/services"],
    "include": ["src/**/*"]
}
