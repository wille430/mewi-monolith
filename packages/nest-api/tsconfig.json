{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "./",
        "incremental": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": false,
        "preserveSymlinks": true,
        "isolatedModules": true,
        "allowJs": true,
        "lib": ["es2019", "dom"],
        "strict": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "declaration": true,
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["dist"],
    "references": [
        {
            "path": "./tsconfig.spec.json"
        }
    ]
}
