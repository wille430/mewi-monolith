{
    "name": "mewi",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "lint": "eslint packages/*/src --ext .ts --ext .tsx",
        "lint:fix": "pnpm run lint:fix -r",
        "e2e": "pnpm run e2e -r",
        "build": "pnpm run build -r",
        "build:api": "pnpm run build -F nest-api",
        "test": "pnpm run test -r",
        "test:watch": "pnpm run test:watch -r",
        "format": "prettier -w .",
        "dev": "pnpm run build:watch -F @wille430/common | pnpm run dev -r --parallel",
        "isolate": "pnpm run isolate -r",
        "isolate:api": "pnpm run isolate -F nest-api",
        "db:up": "docker-compose up db -d || sudo docker compose up db -d",
        "db:down": "docker-compose down db || sudo docker compose down db",
        "vercel-install": "pnpm i --unsafe-perm"
    },
    "private": true,
    "devDependencies": {
        "@types/lodash": "^4.14.182",
        "cypress": "^9.5.3",
        "pnpm-isolate-workspace": "^0.0.5",
        "prettier": "^2.6.2"
    },
    "dependencies": {
        "eslint": "^8.22.0",
        "next": "^12.1.6",
        "pnpm": "^6.32.4",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0"
    }
}