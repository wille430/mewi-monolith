{
    "name": "mewi",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "lint": "eslint packages/**/*/src/**/*.{ts,tsx}",
        "lint:fix": "eslint packages/**/*/src/**/*.{ts,tsx} --fix",
        "e2e": "pnpm run e2e -r",
        "build": "pnpm run build -r",
        "test": "pnpm run test -r",
        "format": "prettier -w .",
        "dev": "pnpm run build:watch -F @wille430/common | pnpm run dev -r --parallel",
        "isolate": "pnpm run isolate -r",
        "db:up": "docker-compose up db -d || sudo docker compose up db -d",
        "db:down": "docker-compose down db || sudo docker compose down db",
        "vercel-install": "./tools/vercel-submodule-workaround.sh && pnpm i -F schemas --unsafe-perm && pnpm i --unsafe-perm -F=!schemas"
    },
    "private": true,
    "devDependencies": {
        "@types/lodash": "^4.14.182",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "cypress": "^9.5.3",
        "eslint": "^8.12.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "pnpm-isolate-workspace": "^0.0.5",
        "prettier": "^2.6.2"
    },
    "dependencies": {
        "next": "^12.1.6",
        "pnpm": "^6.32.4"
    }
}
